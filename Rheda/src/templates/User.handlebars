<div class="graphs">
    {{#error}}
        <h3>{{_t 'Personal stats'}}</h3>
        <br>
        <div class="alert alert-danger">{{error}}</div>
    {{/error}}

    {{#playerData}}
        <h3>{{_p '%s: personal stats' display_name}}</h3>
        <small>id: {{id}}</small>
        <hr/>

        {{^data}}
            {{_t 'No stats are available yet'}}
        {{/data}}

        {{#data}}
            <div id='chart_rating'></div>
                {{> partials/GraphPlotsInit}}
            <hr>

            <div class="container">
            <div class="row">
                <div class="col">
                    <table class="table table-striped table-condensed">
                        <tr>
                            <td colspan="2" style="padding-left: 20px"><b>{{_t 'Common stats'}}</b></td>
                        </tr>
                        <tr>
                            <td>{{_t 'Games played'}}</td>
                            <td><b>{{totalPlayedGames}}</b></td>
                        </tr>
                        <tr>
                            <td>{{_t 'Rounds played'}}</td>
                            <td><b>{{totalPlayedRounds}}</b></td>
                        </tr>
                        <tr>
                            <td>{{_t 'Rounds won'}}</td>
                            <td><b>{{winCount}}</b> &nbsp; ({{winCountPercent}}%)</td>
                        </tr>

                        <tr>
                            <td colspan="2" style="padding-left: 20px"><b>{{_t 'Round details:'}}</b></td>
                        </tr>
                        <tr>
                            <td>{{_t 'Ron wins'}}</td>
                            <td><b>{{ronCount}}</b> &nbsp; ({{ronCountPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Tsumo wins'}}</td>
                            <td><b>{{tsumoCount}}</b> &nbsp; ({{tsumoCountPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Ron feeds'}}</td>
                            <td><b>{{feedCount}}</b> &nbsp; ({{feedCountPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>- {{_t 'because of riichi'}}</td>
                            <td><b>{{feedUnderRiichi}}</b> &nbsp; ({{feedUnderRiichiPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Tsumo losses'}}</td>
                            <td><b>{{tsumoFeedCount}}</b> &nbsp; ({{tsumoFeedCountPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Open hands'}}</td>
                            <td><b>{{openHand}}</b> &nbsp; ({{openHandPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Chombo penalties'}}</td>
                            <td><b>{{chomboCount}}</b> &nbsp; ({{chomboCountPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Riichi bets'}}</td>
                            <td><b>{{riichiTotal}}</b> &nbsp; ({{riichiTotalPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>- {{_t 'bets won'}}</td>
                            <td><b>{{riichiWon}}</b> &nbsp; ({{riichiWonPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>- {{_t 'bets lost'}}</td>
                            <td><b>{{riichiLost}}</b> &nbsp; ({{riichiLostPercent}}%)</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Dora count (avg.)'}}</td>
                            <td><b>{{doraCount}}</b> &nbsp; ({{averageDoraCount}})</td>
                        </tr>
                        <tr>
                            <td colspan="2" style="padding-left: 20px"><b>{{_t 'Places stat:'}}</b></td>
                        </tr>
                        <tr>
                            <td>{{_t '1st place'}}</td>
                            <td>{{place1}} %</td>
                        </tr>
                        <tr>
                            <td>{{_t '2nd place'}}</td>
                            <td>{{place2}} %</td>
                        </tr>
                        <tr>
                            <td>{{_t '3rd place'}}</td>
                            <td>{{place3}} %</td>
                        </tr>
                        <tr>
                            <td>{{_t '4th place'}}</td>
                            <td>{{place4}} %</td>
                        </tr>
                        <tr>
                            <td colspan="2" style="padding-left: 20px"><b>{{_t 'Final game points:'}}</b></td>
                        </tr>
                        <tr>
                            <td>{{_t 'Minimal'}}</td>
                            <td>{{minScores}}</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Maximal'}}</td>
                            <td>{{maxScores}}</td>
                        </tr>
                        <tr>
                            <td>{{_t 'Average'}}</td>
                            <td>{{averageScores}}</td>
                        </tr>
                    </table>
                </div>
                <div class="col-8">
                    <div id='chart_hands'></div>
                    <hr/>
                    <div id='chart_yaku'></div>
                </div>
            </div>
            </div>

        {{/data}}
    {{/playerData}}
</div>
