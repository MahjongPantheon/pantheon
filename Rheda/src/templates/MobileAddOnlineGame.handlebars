<h2 class="header-title">{{_t 'Add online game' }}</h2>

<div class="main-content mobile-add-online-game">
    {{#successfullyAdded}}
        <div class="alert alert-success"><p>{{_t 'The game has been successfully added!'}}</p></div>
        <br>
    {{/successfullyAdded}}

    {{#error}}
        <div class="alert alert-danger">{{error}}</div>
        <br>
    {{/error}}

    <form action="" method="POST" id="addform">
        <input type="text" name="log" value="" autocomplete="off">
        <br>

        <input type="submit" value="{{_t 'Add game'}}">
    </form>
</div>
