<h3>{{_t 'Admin panel'}}</h3>
<br>
{{#error}}
    <div class="alert alert-error">{{error}}</div>
{{/error}}

{{#isLoggedIn}}
    <div class="alert alert-success">{{_t 'Authorized successfully!'}}</div>
{{/isLoggedIn}}

<form action="" method="post" class="well form-inline">
    <div class="form-group mx-sm-3">
        <label for="inputPassword2" class="sr-only">secret</label>
        <input type="password" class="form-control" id="inputPassword2" name="secret" placeholder="secret">
    </div>
    <button type="submit" class="btn btn-primary">{{_t 'Authorize'}}</button>
</form>