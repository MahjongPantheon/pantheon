<style>
    .adm-actions form {
        display: inline;
    }
</style>
<h3>{{_t 'Игроки и регистрация'}}</h3>
<br>
{{#error}}
<div class="alert alert-error">{{error}}</div>
{{/error}}
<hr />
<h4>{{_p 'Списки на регистрацию (%d)' enrolledCount}}</h4>
<table class="table table-condensed table-stripped">
    <tr>
        <th>{{_t 'Игрок'}}</th>
        <th>{{_t 'PIN'}}</th>
        <th>{{_t 'Действия администратора'}}</th>
    </tr>
{{#enrolled}}
    <tr>
        <td>{{display_name}}</td>
        <td>{{pin}}</td>
        <td>
            <form action="" method="post">
                <input type="hidden" name="action_type" value="event_reg" />
                <input type="hidden" name="id" value="{{id}}" />
                <input class="btn btn-large btn-success" type="submit" value="{{_t 'Подтвердить явку'}}" />
            </form>
        </td>
    </tr>
{{/enrolled}}
</table>
<hr />
<h4>{{_t 'Окончательно зарегистрированные игроки (%d)' registeredCount}}</h4>
<table class="table table-condensed table-stripped">
    <tr>
        <th>{{_t 'Игрок'}}</th>
        <th>{{_t 'Действия администратора'}}</th>
    </tr>
{{#registered}}
    <tr>
        <td>{{display_name}}</td>
        <td class="adm-actions">
            <form action="" method="post">
                <input type="hidden" name="action_type" value="reenroll" />
                <input type="hidden" name="id" value="{{id}}" />
                <input class="btn btn-large btn-info" type="submit" value="{{_t 'Выдать PIN заново'}}" />
            </form>
            <form action="" method="post">
                <input type="hidden" name="action_type" value="event_unreg" />
                <input type="hidden" name="id" value="{{id}}" />
                <input class="btn btn-large btn-danger" type="submit" value="{{_t 'Удалить'}}" onclick="return confirm('{{_p 'Удалить игрока %s?' display_name}}');" />
            </form>
        </td>
    </tr>
{{/registered}}
</table>