<style>
    .adm-actions form {
        display: inline;
    }
</style>
<h3>{{_t 'Add player'}}</h3>
{{#error}}
<br>
<div class="alert alert-danger">{{error}}</div>
{{/error}}
<hr />
{{^isAggregated}}
    <h4>{{_t 'All players list'}}</h4>
    {{_t 'Note: if a player is already added to the rating, adding him again will result in reissuing his PIN code.'}}
    <table class="table table-condensed table-stripped">
        <tr>
            <th>ID</th>
            <th>{{_t 'Player'}}</th>
            <th>{{_t 'Admin actions'}}</th>
        </tr>
    {{#everybody}}
        <tr>
            <td>{{id}}</td>
            <td>{{display_name}}</td>
            <td>
                <form action="" method="post">
                    <input type="hidden" name="action_type" value="enroll" />
                    <input type="hidden" name="id" value="{{id}}" />
                    <input class="btn btn-large btn-success" type="submit" value="{{_t 'Add to current rating'}}" />
                </form>
            </td>
        </tr>
    {{/everybody}}
    </table>
    <hr />
    <h4>{{_t 'Add new player to the system'}}</h4>
    <form action="" method="post" class="well form-inline">
        <input type="hidden" name="action_type" value="sys_reg" />
        <input type="text" class="input-medium search-query form-control" name="ident" placeholder='{{_t 'System name'}}' />
        <input type="text" class="input-medium search-query form-control" name="display_name" placeholder='{{_t 'Real name'}}' />
        <button type="submit" class="btn">{{_t 'Register'}}</button>
    </form>
    <hr />
{{/isAggregated}}
