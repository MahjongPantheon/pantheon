<body>
<nav class="navbar fixed-top navbar-expand-sm navbar-collapse navbar-dark bg-dark">
    {{#eventSelected}}
        {{#a class='navbar-brand' href='/'}}{{eventTitle}}{{/a}}
    {{/eventSelected}}
    {{^eventSelected}}
        <a class='navbar-brand' href='/'>{{eventTitle}}</a>
    {{/eventSelected}}
    <button class="navbar-toggler" type="button"
            data-toggle="collapse" data-target="#navbarToggler"
            aria-controls="navbarToggler" aria-expanded="false"
            aria-label="">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarToggler">
        {{!*
            Note: in-event links should use {#a} to put proper event id into
            the link automatically, but global links should use <a>.
        *}}
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            {{#eventSelected}}
                <li class="nav-item"><a class='nav-link' href='/'>{{_t 'To event list'}}</a></li>
                <li class="nav-item">{{#a class='nav-link' href='/last'}}{{_t 'Recent games'}}{{/a}}</li>
                <li class="nav-item">{{#a class='nav-link' href='/stat'}}{{_t 'Rating table'}}{{/a}}</li>
                {{#isTeam}}
                    <li class="nav-item">{{#a class='nav-link' href='/stat/team'}}{{_t 'Team table'}}{{/a}}</li>
                {{/isTeam}}
                {{^isAggregated}}
                    {{#isOnline}}
                        {{^hideAddReplayButton}}
                            <li class="nav-item">{{#a class='nav-link' href='/add-online'}}{{_t 'Add online game' }}{{/a}}</li>
                        {{/hideAddReplayButton}}
                    {{/isOnline}}
                {{/isAggregated}}
                {{#userHasAdminRights}}
                    <li class="nav-item dropdown">
                        <a href="#"
                           class="nav-link dropdown-toggle"
                           id="navbarDropdownMenuLink"
                           data-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false"
                        >{{_t 'Admin actions'}}</a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            {{^isAggregated}}
                                {{^isOnline}}
                                    {{#isTournament}}
                                        {{#a class='dropdown-item' href='/tourn'}}{{_t 'Tournament control panel'}}{{/a}}
                                    {{/isTournament}}
                                    {{^isTournament}}
                                        {{#a class='dropdown-item' href='/games'}}{{_t 'Games control panel'}}{{/a}}
                                    {{/isTournament}}
                                    {{#usePenalty}}
                                        {{#a class='dropdown-item' href='/penalties'}}{{_t 'Penalties'}}{{/a}}
                                    {{/usePenalty}}
                                {{/isOnline}}
                                {{#a class='dropdown-item' href='/reg'}}{{_t 'Manage players'}}{{/a}}
                                {{#isPrescripted}}
                                    {{#a class='dropdown-item' href='/prescript'}}{{_t 'Predefined seating'}}{{/a}}
                                {{/isPrescripted}}
                            {{/isAggregated}}
                            {{#a class='dropdown-item' href='/achievements'}}{{_t 'Achievements'}}{{/a}}
                        </div>
                    </li>
                {{/userHasAdminRights}}
                {{^isAggregated}}
                    {{#useTimer}}
                        <li class="nav-item">{{#a class='nav-link' href='/timer' target='_blank'}}{{_t 'Timer & seating'}}{{/a}}</li>
                    {{/useTimer}}
                {{/isAggregated}}
            {{/eventSelected}}
            {{#isSuperadmin}}
                <li class="nav-item"><a class='nav-link' href='/privileges'>{{_t 'Rights and privileges'}}</a></li>
            {{/isSuperadmin}}
            {{#isLoggedIn}}
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="userActionsMenuButton"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        {{_t 'Actions' }}
                    </a>
                    <div class="dropdown-menu dropdown-menu" aria-labelledby="userActionsMenuButton">
                        <a class='dropdown-item' href='/cp/manageEvents'>{{_t 'Manage ratings and tournaments'}}</a>
                    </div>
                </li>
            {{/isLoggedIn}}
        </ul>
        <ul class="navbar-nav justify-content-end">
            {{#isLoggedIn}}
                <li class="nav-item"><a class='nav-link' href='/profile'
                                        title="{{currentPerson.email}} :: {{currentPerson.id}}">{{currentPerson.title}}</a>
                </li>
                <li class="nav-item"><a class='nav-link' href='/profile/logout'>{{_t 'Log out'}}</a></li>
            {{/isLoggedIn}}
            {{^isLoggedIn}}
                <li class="nav-item"><a class='nav-link' href='/profile/login'>{{_t 'Sign in'}}</a></li>
                <li class="nav-item"><a class='nav-link' href='/signup'>{{_t 'Sign up'}}</a></li>
            {{/isLoggedIn}}
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="dropdownMenuButton"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{> partials/LangIcon i18n=1 width=40 style="position: absolute; top: 0"}}
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="?l=en">{{> partials/LangIcon en=1 width=24}}</a>
                    <a class="dropdown-item" href="?l=ru">{{> partials/LangIcon ru=1 width=24}}</a>
                </div>
            </li>
        </ul>
    </div>
</nav>
<div class="container">
    {{{content}}}
</div>

{{{js "/assets/js/bootstrap.bundle.js"}}}
{{{js "/assets/js/jquery.jqplot.min.js"}}}
{{{js "/assets/js/jqplot.categoryAxisRenderer.min.js"}}}
{{{js "/assets/js/jqplot.barRenderer.min.js"}}}
{{{js "/assets/js/jqplot.highlighter.js"}}}
{{{js "/assets/js/jqplot.cursor.js"}}}
{{{js "/assets/bundle.js"}}}

</body>
</html>
