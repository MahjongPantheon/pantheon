<table class='table table-striped table-condensed'>
    <tr>
        <th>{{_t 'Date & time'}}</th>
        <th>{{_t 'Players'}}</th>
        <th>{{_t 'Details'}}</th>
    </tr>
    {{#games}}
    <tr>
        <td>{{#a href='/game/{hash}/'}}{{endDate}}{{/a}}</td>
        <td>
            <table class='table table-condensed player-list'>
                {{#players}}
                    <tr class="user-item-row">
                        <td class="wind-cell">{{wind}}</td>
                        <td>
                          <b>{{#a href='/user/{id}/'}}{{display_name}}{{/a}}</b>
                          {{#if isOnlineTournament}}<div>{{tenhou_id}}</div>{{/if}}
                        </td>
                        <td>
                            <div class='badge badge-{{label}}'>{{rating_delta}}</div>
                            <div class="score">{{score}}</div>
                        </td>
                    </tr>
                {{/players}}
            </table>
        </td>
        <td>
            <ul>
                {{#replayLink}}
                    <li><a href='{{replayLink}}' class="replay-link" target='_blank'>{{_t 'View replay online'}}</a></li>
                {{/replayLink}}
                <li>{{{_p 'Best hand: <b>%s</b> - %s' bestHandPlayers bestHandCost}}}</li>
                <li>{{_p 'Ron hands: %d' ronWins}}</li>
                <li>{{_p 'Tsumo hands: %d' tsumoWins}}</li>
                <li>{{_p 'Drawn rounds: %d' draws}}</li>
                {{#chombo}}
                    <li>{{_p 'Chombo penalties: %s' chombo}}</li>
                {{/chombo}}
                {{#showPenalties}}
                    <li>
                        {{_t 'Additional penalties:'}}
                        <ul>
                            {{#penalties}}
                                <li>{{_p '%s - %d points (%s)' who amount reason}}</li>
                            {{/penalties}}
                        </ul>
                    </li>
                {{/showPenalties}}
                <li>{{_t 'Full game log:'}}</li>
                <div class='fullLog'>
                    {{#logItems}}
                        <div>
                            {{> partials/GameLogItem}}
                        </div>
                    {{/logItems}}
                </div>
            </ul>
        </td>
    </tr>
    {{/games}}
</table>
