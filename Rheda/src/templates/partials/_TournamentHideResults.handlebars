           class="btn btn-lg btn-{{#hideResults}}success{{/hideResults}}{{^hideResults}}warning{{/hideResults}} actionButton"
           value="{{#hideResults}}{{_t 'Rating table is hidden. Show'}}{{/hideResults}}
