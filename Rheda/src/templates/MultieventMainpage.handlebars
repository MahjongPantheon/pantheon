<h3>{{_t 'Rheda: mahjong statistic system'}}</h3>
<br>

<table class="table table-striped table-condensed">
  <tr>
    <th>{{_t 'Event title'}}</th>
    <th>{{_t 'Event description'}}</th>
    <th>{{_t 'Event type'}}</th>
  </tr>
  {{#events}}
    <tr>
      <td>{{#a class='nav-link' href='/' id='{id}'}}{{title}}{{/a}}</td>
      <td>{{description}}</td>
      <td>{{type}}</td>
    </tr>
  {{/events}}
</table>

<ul class="pagination">
  {{#hasPreviousButton}}
    <li class="page-item"><a class='page-link' href='/page/{{prevPage}}'>{{_t 'Later'}}</a></li>
  {{/hasPreviousButton}}

  {{#hasNextButton}}
    <li class="page-item"><a class='page-link' href='/page/{{nextPage}}'>{{_t 'Earlier'}}</a></li>
  {{/hasNextButton}}
</ul>
