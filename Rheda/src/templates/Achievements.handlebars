<style>
  .achievements-page .paragraph-title {
    font-size: 14px;
    display: block;
    border-bottom: 1px solid #ccc;
    color: #999;
    margin-top: 12px;
    margin-bottom: 6px;
  }

  .achievements-page .value {
    font-size: 26px;
  }
</style>

{{#error}}
    <div class="alert alert-danger" style="white-space: pre">{{error}}</div>
{{/error}}
{{^error}}
